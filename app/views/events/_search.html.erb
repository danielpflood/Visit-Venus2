<div id="detailedsearch">
<h2>Search for event:</h2>
<%= form_tag events_path, :method => 'get', :id => "events_search" do %>
	
  <p>
	Name: <%= text_field_tag :name, params[:name] %>&nbsp;&nbsp;&nbsp;
	Type: <%= text_field_tag :type, params[:type] %>&nbsp;&nbsp;&nbsp;
	Location: <%= text_field_tag :location, params[:location] %>
	Date: <%= text_field_tag :date, params[:date] %>&nbsp;&nbsp;
	
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>